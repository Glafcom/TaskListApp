@using TaskListApp.Web.Areas.Admin.Models.UsersViewModels;
@model UserDetailViewModel

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>User Detail</h2>

@using (Html.BeginForm("Save", "Users", FormMethod.Post, new { @class = "form-horizontal" })) 
{
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.UserName)
    @Html.HiddenFor(m => m.Name)
    @Html.HiddenFor(m => m.Surname)
    @Html.HiddenFor(m => m.Email)
    @Html.HiddenFor(m => m.IsBlocked)
    @Html.HiddenFor(m => m.ReturnUrl)
    <div class="form-group">
        <div class="row">
            <span class="col-md-2">Status:</span>
            <span class="col-md-4">@(Model.IsBlocked ? "Blocked" : "Active")</span>
            @if (Model.IsBlocked) {
                <button class="btn btn-default col-md-2 user-unblock-btn">Unblock</button>
            }
            else {
                <button class="btn btn-default col-md-2 user-block-btn">Block</button>
            }
        </div>    
    </div>
    <div class="form-group">
        <div class="row">
            <span class="col-md-2">UserName:</span>
            <span class="col-md-4">@Model.UserName</span>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <span class="col-md-2">Name:</span>
            <span class="col-md-4">@Model.Name @Model.Surname</span>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <span class="col-md-2">Email:</span>
            <span class="col-md-4">@Model.Email</span>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            @Html.LabelFor(m => m.DepartmentId, new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(m => m.DepartmentId, Model.DepartmentsList, new { @class = "form-control col-md-4"})
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            @Html.LabelFor(m => m.Role, new { @class = "control-label col-md-2" })
            @Html.EnumDropDownListFor(m => m.Role, new { @class = "form-control col-md-4" })
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <button type="submit" class="btn btn-default col-md-4">Save</button>
            <a href="@Url.Action("Back", "Users", new { returnUrl = Model.ReturnUrl})">Back</a>
        </div>
    </div>
}


