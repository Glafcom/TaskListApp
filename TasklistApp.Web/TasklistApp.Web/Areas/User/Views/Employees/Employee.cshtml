@using TaskListApp.Web.Areas.User.Models.EmployeesViewModels;
@model EmployeeViewModel

@{
    ViewBag.Title = "Employee";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<h2>Employee</h2>

<div class="employee-info-container container">
    <form class="form-horizontal">
        <div class="form-group">
            <div class="row">
                <span class="col-md-2">Name:</span>
                <span class="col-md-4">@Model.Name @Model.Surname</span>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <span class="col-md-2">Email:</span>
                <span class="col-md-4">@Model.Email</span>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <span class="col-md-2">Department:</span>
                <span class="col-md-4">@Model.Department.Name</span>
            </div>
        </div>
    </form>
</div>

